{
    "name": "stratus-meridian/sm-dev-portal-composer",
    "description": "Developer Portal Drupal 8 Composer Root.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Jyothi K Reddy",
            "email": "jyothi@stratusmeridian.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "vcs",
            "url": "git@github.com:stratus-meridian/sm_dev_portal.git"
          }
    ],
    "require": {
        "php": "^7.3",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.7",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/console": "^1.0.2",
        "drupal/core-recommended": "^8.8",
        "drush/drush": "^9.0.0",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.2",
        "stratus-meridian/sm_dev_portal": "dev-8.x-2.x"
    },
    "require-dev": {
        "drupal/core-dev": "^8.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "process-timeout": 0
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "quick-start": [
          "composer install",
          "php web/core/scripts/drupal quick-start sm_dev_portal"
        ]
    },
    "extra": {
            "installer-paths": {
                "web/core": ["type:drupal-core"],
                "web/libraries/{$name}": ["type:drupal-library","type:bower-asset","type:npm-asset"],
                "web/modules/contrib/{$name}": ["type:drupal-module"],
                "web/profiles/contrib/{$name}": ["type:drupal-profile"],
                "web/themes/contrib/{$name}": ["type:drupal-theme"],
                "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
                "web/libraries/swagger_ui": ["bower-asset/swagger-ui"],
                "web/private/scripts/quicksilver/{$name}/": ["type:quicksilver-script"]
            },
            "installer-types": ["bower-asset", "npm-asset"],
            "build-env": {
                "install-cms": [
                    "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes"
                ],
                "export-configuration": "drush config-export --yes"
            },
            "drupal-core-project-message": {
                "include-keys": ["homepage", "support"],
                "post-create-project-cmd-message": [
                    "<bg=blue;fg=white>                                                         </>",
                    "<bg=blue;fg=white>  Congratulations, youâ€™ve installed Stratus Meridian Dev Portal  </>",
                    "<bg=blue;fg=white>  from the stratus-meridian/sm-dev-portal-composer template!          </>",
                    "<bg=blue;fg=white>                                                         </>",
                    "",
                    "<bg=yellow;fg=black>Next steps</>:",

                    "  * Install the site: https://www.drupal.org/docs/8/install",
                    "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                    "  * Get support: https://www.support.stratusmeridian.com",
                    "  * Get involved with the Drupal community:",
                    "      https://www.drupal.org/getting-involved",
                    "  * Remove the plugin that prints this message:",
                    "      composer remove drupal/core-project-message"
                ]
            }
        }
}
